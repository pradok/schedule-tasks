generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id         String   @id @default(uuid())
  account_id Int
  agent_id   Int
  start_time DateTime
  end_time   DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  tasks      Task[]
}

model Task {
  id          String   @id @default(uuid())
  account_id  Int
  schedule    Schedule @relation(fields: [schedule_id], references: [id])
  schedule_id String
  start_time  DateTime
  duration    Int
  type        TaskType
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

enum TaskType {
  break
  work
}
